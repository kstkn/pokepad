{
  "name": "pokepad",
  "version": "1.0.0",
  "description": "A simple pokepad app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "audio",
    "soundboard",
    "audio-player",
    "sound-effects",
    "media-player",
    "desktop-app"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/pokepad.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/pokepad/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/pokepad#readme",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pokepad.app",
    "productName": "pokepad",
    "mac": {
      "icon": "launchpad.png",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "dir",
          "arch": ["arm64"]
        }
      ]
    },
    "win": {
      "icon": "launchpad.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "launchpad.png"
    ]
  }
}

